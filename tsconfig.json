{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",

        "removeComments": true,

        "strict": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
